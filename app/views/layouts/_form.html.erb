<%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, t("views.layouts.name_label") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("views.layouts.email_label") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("views.layouts.password_label") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("views.layouts.password_confirmation_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
