<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("views.layouts.app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.layouts.home"), root_path %></li>
        <li><%= link_to t("views.layouts.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("views.layouts.users"), "#" %> </li>
          <li class = "dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "views.layouts.account" %> <b class ="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.layouts.profile"), current_user %> </li>
              <li><%= link_to t("views.layouts.settings"), "#" %> </li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.layouts.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li> <%= link_to t("views.layouts.login"), login_path %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
