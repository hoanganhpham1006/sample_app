<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.picture.size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "views.microposts.time_ago", time: time_ago_in_words(micropost.created_at) %>
    <% if current_user.current_user? micropost.user %>
      <%= link_to t("views.microposts.delete"), micropost, method: :delete,
        data: {confirm: t("views.microposts.delete_confirmation")} %>
    <% end %>
  </span>
</li>
