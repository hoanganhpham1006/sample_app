<% provide :title, t("views.sessions.login") %>
<%= content_tag :h1, t("views.sessions.login") %>
<div class = "row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("views.sessions.email") %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t("views.sessions.password") %>
      <%= link_to t("views.sessions.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span> <%= t "views.sessions.remember_me_message" %></span>
      <% end %>

      <%= f.submit t("views.sessions.login"), class: "btn btn-primary" %>
    <% end %>
    <p> <%= t("views.sessions.new?") %>
      <%= link_to t("views.sessions.signup!"), signup_path %>
    </p>
  </div>
</div>
