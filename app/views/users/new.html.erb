<% provide :title, t("views.users.signup")%>
<h1><%= t "views.users.signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("views.users.name_label") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("views.users.email_label") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("views.users.password_label") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("views.users.password_confirmation_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
